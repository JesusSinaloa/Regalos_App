<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LoginView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Perfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="177dp"
                    android:background="@drawable/gradient_background"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Welcome Back!"
                    android:textColor="#673ab7"
                    android:textSize="20pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ejemplo@email.com"
                    app:boxStrokeColor="#9c27b0"
                    app:boxStrokeWidth="1dp"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@color/purple">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textCursorDrawable="@color/purple" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    app:boxStrokeColor="#9c27b0"
                    app:boxStrokeWidth="1dp"
                    app:errorEnabled="true"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@color/purple">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textCursorDrawable="@color/purple" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <Button
                    android:id="@+id/btnSingIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/float_bottom"
                    android:shadowColor="@color/colorIcons"
                    android:text="Sing in"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/btnSingUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:shadowColor="@color/colorIcons"
                    android:text="Sing up"
                    android:textColor="@color/colorIcons" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="or Sing in with" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="59dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/facebook" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="55dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/twiter" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="40dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/google" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>